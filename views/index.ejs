<!DOCTYPE HTML>
<head>
<link href="//cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="../web/css/index.css">
<title>教程资料</title>
</head>
<body>
<div id="app">
    <div id="app-container">
         <list-container
            :data="lists"
            :filter-key="searchQuery"
         ></list-container>
    </div>
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-left panel-body">
                <span class="label label-default" @click="tag">react</span>
                <span class="label label-default" @click="tag">angular</span>
                <span class="label label-default" @click="tag">node</span>
                <span class="label label-default" @click="tag">android</span>
                <span class="label label-default" @click="tag">reality</span>
                <span class="label label-default" @click="tag">spark</span>
                <span class="label label-default" @click="tag">javascript</span>
                <span class="label label-default" @click="tag">data</span>
                <span class="label label-default" @click="tag">photoshop</span>
            </div>
            <div class="navbar-right">
                <div class="navbar-form navbar-left">
                    <div class="form-group">
                        <input type="text" class="form-control" @keyup.enter="search"  v-model="searchQuery">
                    </div>
                    <button type="submit" @click="search" class="btn btn-default">搜索</button>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </nav>
    <ul class="list-group" style="display: none;">
        <% List.forEach(function (item) { %>
        <li class="list-group-item">
            <span class="badge"><%= moment(item.createdAt).format('YYYY / MM / DD') %></span>
            <a href="<%= item.url %>"><%= item.name %></a>
        </li>
        <% }) %>
    </ul>
</div>

<!-- component template -->
<script type="text/x-template" id="list-template">
    <ul class="list-group">
        <li class="list-group-item" v-for="item in data | filterBy filterKey ">
            <span class="badge">{{item["updatedAt"]}}</span>
            <a target="_blank" href={{item["url"]}}>{{{ item["name"] | highlight filterKey }}}</a>
        </li>
    </ul>
</script>



<script src="//cdn.bootcss.com/jquery/3.1.0/jquery.min.js"></script>
<script src="/web/js/lib/vue.min.js"></script>
<script src="../web/js/index.js"></script>
</body>
